<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WomanCalendar" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/pink</item>
        <item name="colorPrimaryVariant">@color/beige</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/pink</item>
        <item name="colorSecondaryVariant">@color/pink_50</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="GlobalButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="cornerFamily">rounded</item>
        <item name="cornerRadius">32dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">18sp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="OutlinedButtonStyle" parent="Widget.MaterialComponents.Button.OutlinedButton.Icon">
        <item name="cornerFamily">rounded</item>
        <item name="cornerRadius">32dp</item>
        <item name="android:textColor">@color/pink</item>
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">12sp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="IconButtonStyle" parent="Widget.MaterialComponents.Button.Icon">
        <item name="cornerFamily">rounded</item>
        <item name="cornerRadius">32dp</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="OnBoardingRadioButtonStyle" parent="Widget.MaterialComponents.CompoundButton.RadioButton">
        <item name="android:textColor">@color/text_color</item>
        <item name="fontFamily">@font/segoe_print_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@drawable/bg_onboarding_button</item>
        <item name="android:button">@drawable/selector_onboarding_radiobutton</item>
        <item name="android:buttonTint">@color/pink</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>